{
  "name": "language-learning-hub",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "description": "A comprehensive language learning platform with instructor management, student progress tracking, and interactive lessons.",
  "keywords": [
    "language learning",
    "education",
    "react native",
    "expo",
    "instructor",
    "student management"
  ],
  "homepage": "https://github.com/your-username/language-learning-hub",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/language-learning-hub.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/language-learning-hub/issues"
  },
  "scripts": {
    "start": "expo start",
    "start:prod": "expo start --no-dev --minify",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "build:android": "eas build --platform android --profile production",
    "build:ios": "eas build --platform ios --profile production",
    "build:all": "eas build --platform all --profile production",
    "preview:android": "eas build --platform android --profile preview",
    "preview:ios": "eas build --platform ios --profile preview",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "prepare": "husky install"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-picker/picker": "^2.11.1",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/drawer": "^7.3.9",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@types/papaparse": "^5.3.16",
    "appwrite": "^18.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "expo": "~53.0.23",
    "expo-audio": "~0.4.9",
    "expo-blur": "~14.1.5",
    "expo-constants": "~17.1.7",
    "expo-document-picker": "^13.1.6",
    "expo-file-system": "^18.1.11",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "^16.1.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-linking": "~7.1.7",
    "expo-router": "~5.1.7",
    "expo-sharing": "~13.1.5",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-video": "~2.2.2",
    "expo-web-browser": "~14.2.0",
    "lucide-react": "^0.544.0",
    "nativewind": "^4.1.23",
    "node-appwrite": "^17.0.0",
    "papaparse": "^5.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.63.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-video": "^6.16.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "typescript": "~5.8.3"
  },
  "private": true
}
